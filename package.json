{
  "name": "clean_architecture_api",
  "version": "2.1.0",
  "main": "index.js",
  "repository": "git@github.com:WelissonLuca/clean_architecture_api.git",
  "author": "Welisson luca <welissonluca17@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/server.js",
    "dev": "ts-node-dev src/main/server.ts",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "up": "yarn build && docker-compose up -d",
    "down": "docker-compose down",
    "lint": "eslint 'src/**' --fix",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --forceExit",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c ./jest-unit-config.js",
    "test:integration": "npm test -- --watch -c ./jest-integration-config.js",
    "test:staged": "npm test --findRelatedTests",
    "test:ci": "npm test -- --coverage --forceExit",
    "test:coveralls": "npm run test:ci -- --forceExit && coveralls < coverage/lcov.info",
    "pre-push": "git diff HEAD --quiet && npm run test:ci && npm run lint",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "git diff HEAD --quiet && npm run test:ci && npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@shelf/jest-mongodb": "^2.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongodb": "^3.5.34",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "coveralls": "^3.1.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-helpers": "1.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "mockdate": "^3.0.5",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.3",
    "nodemon": "^2.0.15",
    "swagger-ui-express": "^4.3.0",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "16.x"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@infra": "dist/infra",
    "@main": "dist/main",
    "@presentations": "dist/presentations",
    "@validation": "dist/validation",
    "@data": "dist/data"
  }
}
